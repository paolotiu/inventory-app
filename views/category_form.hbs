<form action="" method="post" class="center form" enctype="multipart/form-data">
    <h1>{{title}}</h1>
    <div class="form-input-container">
        <div class="form-input">
            <label for="name">Name: </label>
            <input type="text" name="name" id="name" required value={{name}}>

        </div>
        <span class="danger">{{nameErr}}</span>
    </div>
    <div class="form-input-container">
        <div class="form-input">
            <label for="photo">Upload Image: </label>
            <input type="file" name="photo" value={{file}} id="file">
        </div>

        <span class="danger">{{fileErr}}</span>
    </div>
    {{#if isItem}}
    <div class="form-input">
        <label for="price">Price: </label>
        <input type="number" step="0.1" name="price" min="0" id="price" value={{price}} required>
        <span class="danger">{{priceErr}}</span>
    </div>
    <div class="form-input">
        <label for="qty">Qty: </label>
        <input type="number" name="qty" min="0" id="qty" value={{qty}} required>
        <span class="danger">{{qtyErr}}</span>
    </div>
    <div class="form-input textarea">
        <label for="desc">Description:</label>
        <textarea name="desc" cols="30" rows="10" id="desc" value={{desc}}></textarea>
        <span class="danger">{{descErr}}</span>
    </div>
    <input type="text" name="categoryId" value={{id}} hidden>

    {{/if}}
    <button type="submit"> Submit </button>

</form>